{
    "Register": {
        "properties": {
            "fullName": {
                "type": "string",
                "required": true
            },
            "phone": {
                "type": "string",
                "required": true
            },
            "profession": {
                "type": "string"
            },
            "password": {
                "type": "string"
            },
            "role": {
                "type": "string",
                "default": "student"
            }
        }
    },
    "Login": {
        "properties": {
            "phone": {
                "type": "string",
                "required": true
            },
            "password": {
                "type": "string",
                "required": true
            }
        }
    },
    "UserUpdate": {
        "properties": {
            "fullName": {
                "type": "string",
                "required": true
            },
            "attendance": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    }
}